generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  credentials credentials[]
  notes notes[]
  cards cards[]
}

model credentials {
  id Int @id @default(autoincrement())
  url String
  user String
  password String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

model notes {
  id Int @id @default(autoincrement())
  note String @db.VarChar(1000)
  title String @db.VarChar(50)
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

model cards {
  id Int @id @default(autoincrement())
  number String 
  name String
  cvv String
  expiration DateTime
  password String
  isVirtual Boolean
  type String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

enum type {
  CREDITO
  DEBITO
  AMBOS
}