generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  credentials credentials[]
  notes notes[]
  cards cards[]
  wifis wifis[]
  docs docs[]
}

model credentials {
  id Int @id @default(autoincrement())
  url String
  user String
  password String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

model notes {
  id Int @id @default(autoincrement())
  note String @db.VarChar(1000)
  title String @db.VarChar(50)
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

model cards {
  id Int @id @default(autoincrement())
  number String 
  name String
  cvv String
  expiration String
  password String
  isVirtual Boolean
  typeCard String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

enum typeCard {
  CREDITO
  DEBITO
  AMBOS
}

model wifis {
  id Int @id @default(autoincrement())
  name String
  password String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int
}

model docs {
  id Int @id @default(autoincrement())
  typeDoc String
  name String
  emission DateTime
  expiration DateTime
  number String
  org String
  author   users @relation(fields: [userId], references: [id])
  userId Int
}

enum typeDoc {
  RG
  CNH
}