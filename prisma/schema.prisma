generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  credentials credentials[]
  notes notes[]
}

model credentials {
  id Int @id @default(autoincrement())
  url String
  user String
  password String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

model notes {
  id Int @id @default(autoincrement())
  note String
  title String
  author   users @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}